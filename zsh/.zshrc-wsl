# Better ls colors for WSL
eval "$(dircolors -b)"
export LS_COLORS="${LS_COLORS}:di=01;34:ln=01;36:ow=01;34:tw=01;34"
alias ls='ls --color=auto --group-directories-first -F'

# Better cd colors for WSL
zmodload zsh/complist
zstyle -d ':completion:*' list-colors
zstyle -d ':completion:*' menu
# dirs = blue, links = cyan, world/sticky-writable = same as dirs, match = yellow
zstyle ':completion:*' list-colors 'di=01;34:ln=01;36:ow=01;34:tw=01;34:ma=1;33'
zstyle ':completion:*' menu select=0

ZSH_THEME="robbyrussell-wsl"
